<h1>Status</h1>

<p>This page shows the home status of barcelona</p>

<h2>Districts</h2>

<table>
    <thead>
      <th>
        Name
      </th>
      <th>
        Link
      </th>
      <th>
        Size
      </th>
    </thead>

  <% @districts.each do |district| %>
    <tr>
      <td>
        <%= district.name %>
      </td>
      <td>
        <a href="/status/<%= district.id %>">link</a>
      </td>
      <td>
        <%= district.cluster_size %>
      </td>
    </tr>
  <% end %>
</table>

